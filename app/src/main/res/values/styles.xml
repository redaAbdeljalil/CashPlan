<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Custom TextInputLayout Style -->
    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/input_background</item>
        <item name="boxStrokeColor">@color/input_stroke_color</item>
        <item name="hintTextColor">@color/primary_color</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
    </style>


    <!-- Text Styles -->
    <style name="HeadlineText">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="SubtitleText">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="LinkText">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">4dp</item>
    </style>

<!-- Base application theme -->
<style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <item name="colorPrimary">@color/primary_color</item>
    <item name="colorPrimaryVariant">@color/primary_dark</item>
    <item name="colorOnPrimary">@android:color/white</item>
    <item name="colorSecondary">@color/secondary_color</item>
    <item name="colorSecondaryVariant">@color/secondary_dark</item>
    <item name="colorOnSecondary">@android:color/black</item>
    <item name="android:colorBackground">@color/background</item>
    <item name="colorSurface">@color/surface</item>
    <item name="colorOnBackground">@color/text_primary</item>
    <item name="colorOnSurface">@color/text_primary</item>
    <item name="android:statusBarColor">@color/background</item>
    <item name="android:windowLightStatusBar">true</item>
    <item name="android:navigationBarColor">@color/background</item>
    <item name="android:windowLightNavigationBar">true</item>
</style>

<!-- Splash Screen Theme -->
<style name="SplashTheme" parent="AppTheme">
    <item name="android:windowBackground">@drawable/splash_background</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowFullscreen">false</item>
</style>

<!-- Button Styles -->
<style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">56dp</item>
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textStyle">bold</item>
    <item name="android:fontFamily">sans-serif-medium</item>
    <item name="android:textAllCaps">false</item>
    <item name="backgroundTint">@color/button_primary</item>
    <item name="cornerRadius">16dp</item>
    <item name="android:elevation">2dp</item>
    <item name="android:stateListAnimator">@null</item>
</style>

<style name="SecondaryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">56dp</item>
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">@color/text_primary</item>
    <item name="android:textStyle">normal</item>
    <item name="android:fontFamily">sans-serif-medium</item>
    <item name="android:textAllCaps">false</item>
    <item name="strokeColor">@color/input_stroke_color</item>
    <item name="strokeWidth">1dp</item>
    <item name="cornerRadius">16dp</item>
    <item name="rippleColor">@color/black_20</item>
</style>

<style name="OutlineButton" parent="SecondaryButton">
    <item name="android:background">@drawable/button_outline</item>
</style>

<!-- Card Styles -->
<style name="CardStyle" parent="Widget.MaterialComponents.CardView">
    <item name="cardCornerRadius">16dp</item>
    <item name="cardElevation">4dp</item>
    <item name="cardBackgroundColor">@color/card_background</item>
    <item name="android:foreground">@drawable/card_ripple</item>
    <item name="android:clickable">true</item>
    <item name="android:focusable">true</item>
</style>

<style name="QuickActionCard" parent="CardStyle">
    <item name="cardCornerRadius">20dp</item>
    <item name="cardElevation">3dp</item>
</style>

<!-- Text Styles -->
<style name="HeadingLarge">
    <item name="android:textSize">28sp</item>
    <item name="android:textColor">@color/text_primary</item>
    <item name="android:textStyle">bold</item>
    <item name="android:fontFamily">sans-serif-medium</item>
</style>

<style name="HeadingMedium">
    <item name="android:textSize">20sp</item>
    <item name="android:textColor">@color/text_primary</item>
    <item name="android:textStyle">bold</item>
    <item name="android:fontFamily">sans-serif-medium</item>
</style>

<style name="HeadingSmall">
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">@color/text_primary</item>
    <item name="android:textStyle">bold</item>
    <item name="android:fontFamily">sans-serif-medium</item>
</style>

<style name="BodyLarge">
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">@color/text_primary</item>
    <item name="android:fontFamily">sans-serif</item>
</style>

<style name="BodyMedium">
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/text_secondary</item>
    <item name="android:fontFamily">sans-serif</item>
</style>

<style name="BodySmall">
    <item name="android:textSize">12sp</item>
    <item name="android:textColor">@color/text_secondary</item>
    <item name="android:fontFamily">sans-serif</item>
</style>

<!-- Input Field Styles -->
<style name="InputFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
    <item name="boxBackgroundColor">@android:color/white</item>
    <item name="boxCornerRadiusTopStart">12dp</item>
    <item name="boxCornerRadiusTopEnd">12dp</item>
    <item name="boxCornerRadiusBottomStart">12dp</item>
    <item name="boxCornerRadiusBottomEnd">12dp</item>
    <item name="boxStrokeColor">@color/input_stroke_selector</item>
    <item name="hintTextColor">@color/primary_color</item>
    <item name="startIconTint">@android:color/darker_gray</item>
    <item name="endIconTint">@android:color/darker_gray</item>
</style>

<!-- Bottom Navigation Style -->
<style name="BottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
    <item name="itemIconTint">@color/bottom_nav_selector</item>
    <item name="itemTextColor">@color/bottom_nav_selector</item>
    <item name="android:background">@drawable/bottom_nav_background</item>
    <item name="elevation">8dp</item>
    <item name="labelVisibilityMode">auto</item>
    <item name="itemIconSize">24dp</item>
    <item name="itemTextAppearanceInactive">@style/BottomNavTextInactive</item>
    <item name="itemTextAppearanceActive">@style/BottomNavTextActive</item>
</style>

<style name="BottomNavTextInactive" parent="@style/TextAppearance.MaterialComponents.Caption">
    <item name="android:textSize">12sp</item>
    <item name="android:fontFamily">sans-serif</item>
</style>

<style name="BottomNavTextActive" parent="@style/TextAppearance.MaterialComponents.Caption">
    <item name="android:textSize">12sp</item>
    <item name="android:fontFamily">sans-serif-medium</item>
    <item name="android:textStyle">bold</item>
</style>

<!-- Toolbar Style -->
<style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
    <item name="android:background">@color/background</item>
    <item name="titleTextColor">@color/text_primary</item>
    <item name="subtitleTextColor">@color/text_secondary</item>
    <item name="android:elevation">0dp</item>
</style>

<!-- Progress Bar Style -->
<style name="ProgressBarStyle" parent="Widget.AppCompat.ProgressBar.Horizontal">
    <item name="android:progressDrawable">@drawable/progress_bar_custom</item>
    <item name="android:minHeight">6dp</item>
    <item name="android:maxHeight">6dp</item>
</style>

<!-- Floating Action Button Style -->
<style name="FABStyle" parent="Widget.MaterialComponents.FloatingActionButton">
    <item name="backgroundTint">@color/primary_color</item>
    <item name="tint">@android:color/white</item>
    <item name="fabSize">normal</item>
    <item name="elevation">6dp</item>
    <item name="pressedTranslationZ">12dp</item>
</style>
</resources>